    ViewData["Title"] = "Salwa";
}
@section css {
    <link href="@Url.Content("~/css/Salwa.css")" rel="stylesheet" />
}

<div id="slides" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
        <li data-target="#slides" data-slide-to="0" class="active"></li>
        <li data-target="#slides" data-slide-to="1"></li>
        <li data-target="#slides" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="images/background.png" alt="IMAGE">
            <div class="carousel-caption">
                <h1 class="display-2">SallyRa</h1>
                <h3 class="sally-title">Welcome to Sally-Zone</h3>
                <button type="button" onclick="location.href ='https://github.com/SalwaRaa';" class="btn btn-outline-light btn-lg salwa-scbutton">GitHub</button>
                <button type="button" onclick="location.href ='https://www.twitch.tv/sallyra';" class="btn btn-lg salwa-button">Twitch</button>
            </div>
        </div>
        <div class="carousel-item">
            <img src="images/background2.jpg" alt="IMAGE">
        </div>
        <div class="carousel-item">
            <img src="images/background3.png" alt="IMAGE">
        </div>
    </div>
</div>

<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12">
            <h1 class="display-4">Code Game Sleep Reapet</h1>
        </div>
        <hr>
        <hr>
        <div class="col-12">
            <p class="lead">Welcome to my super chill website where I talk about anything from, gaming and coding to Kpop and anime!</p>
        </div>
        <i class="fab fa-mdb"></i>
    </div>
</div>

<div class="container-fluid padding">
    <div class="row text-center padding">
        <div class="col-xs-12 col-sm-6 col-md-4">
            <i class="fas fa-code"></i>
            <h3>C#</h3>
            <p>Built with the latest verson of c#</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <i class="fab fa-mdb"></i>
            <h3>Azure</h3>
            <p>Deployed with the latest version of Azure</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <i class="fab fa-css3"></i>
            <h3>Razor</h3>
            <p>Built with the latest version of Razor</p>
        </div>
    </div>
    <hr class="my-4">
</div>



